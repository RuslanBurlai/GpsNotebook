<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GpsNotebook.Control.CustomNavigationBar"
             xmlns:custombar="clr-namespace:GpsNotebook.Control">
    
    <custombar:CustomBarBindableProperty ColumnDefinitions="0.2*, 0.6*. 0.2*" 
                                         x:Name="Grid">
        
        <!--use BindingContext-->
        <!--https://metanit.com/sharp/xamarin/4.4.php-->
        
        <Image Grid.Column="0">
        </Image>
        
        <BoxView Grid.Column="0" 
                 BackgroundColor="Transparent">
            
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Command="{}"/>
            </BoxView.GestureRecognizers>

        </BoxView>
        
        <Label Grid.Column="1" 
               Text="{Binding {}"/>

    </custombar:CustomBarBindableProperty>
</ContentView>