<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GpsNotebook.View.AddPin"
             Title="{Binding Title}">
    
    <Grid RowDefinitions="0.3*, *, 0.1*">
        <StackLayout Grid.Row="0" Padding="25">
            
            <Entry Placeholder="Pin name"/>
            <Entry Placeholder="Description"/>
            <Entry Placeholder="Coordinates"/>
            
        </StackLayout>

        <StackLayout>
            
            
        </StackLayout>

        <Button Grid.Row="2" Text="Create Pin" Margin="25, 0, 25, 0"/>

    </Grid>
    
</ContentPage>