<?xml version="1.0" encoding="utf-8" ?>
<baseContentPage:BaseContentPage x:Class="GpsNotebook.View.AddPinView"
                                 xmlns="http://xamarin.com/schemas/2014/forms"
                                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                                 xmlns:googleMap="clr-namespace:GpsNotebook.Control"
                                 xmlns:baseContentPage="clr-namespace:GpsNotebook.View"
                                 xmlns:prism="http://prismlibrary.com"
                                 Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <ToolbarItem
            Command="{Binding SavePinCommand}"
            Order="Primary"
            Text="Save" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="0.4*, *">

        <StackLayout Grid.Row="0">
            <!--to resources-->
            <Entry Placeholder="Pin name"
                   Text="{Binding PinName}" />

            <Entry Placeholder="Description"
                   Text="{Binding PinDescription}" />

            <Picker 
                Title="Categories"
                VerticalOptions="Center"
                ItemsSource="{Binding Categories}"
                ItemDisplayBinding="{Binding Name}" 
                SelectedItem="{Binding SelectedCategories, Mode=TwoWay}"/>

            <Grid ColumnDefinitions="*, *">
                <StackLayout Grid.Column="0"
                             Orientation="Horizontal">
                    <Label Text="Longitude:" />
                    <Label Text="{Binding PinLongitude}" />
                </StackLayout>

                <StackLayout Grid.Column="1"
                             Orientation="Horizontal">
                    <Label Text="Latitude:" />
                    <Label Text="{Binding PinLatitude}" />
                </StackLayout>
            </Grid>

        </StackLayout>

        <StackLayout Grid.Row="1">
            <googleMap:CustomMapForAddPinViewModel GetPinPosition="{Binding GetPosition}" />
        </StackLayout>

    </Grid>

</baseContentPage:BaseContentPage>