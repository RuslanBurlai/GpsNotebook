<?xml version="1.0" encoding="utf-8" ?>
<baseContentPage:BaseContentPage x:Class="GpsNotebook.View.LogInView"
                                 xmlns="http://xamarin.com/schemas/2014/forms"
                                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                                 xmlns:baseContentPage="clr-namespace:GpsNotebook.View"
                                 xmlns:prism="http://prismlibrary.com"
                                 Title="{Binding Title}"
                                 prism:ViewModelLocator.AutowireViewModel="True">
    
    <Grid RowDefinitions="*, 0.3*">

        <StackLayout
            Grid.Row="0"
            Padding="25"
            VerticalOptions="Center">

            <Entry Placeholder="Email" Text="{Binding UserEmail}" />

            <Entry
                IsPassword="True"
                Placeholder="Password"
                Text="{Binding UserPassword}" />

        </StackLayout>

        <StackLayout Grid.Row="1" VerticalOptions="Center">

            <Button
                Margin="25,0,25,0"
                Command="{Binding NavigateToMapTabbedPageCommand}"
                Text="Sign In" />

            <Label HorizontalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span
                            Text="Sign up"
                            TextColor="Blue"
                            TextDecorations="Underline">
                            <Span.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateToSignUpCommand}" />
                            </Span.GestureRecognizers>
                        </Span>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </StackLayout>
    </Grid>
</baseContentPage:BaseContentPage>