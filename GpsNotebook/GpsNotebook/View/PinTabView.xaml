<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GpsNotebook.View.PinTabView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:c="clr-namespace:GpsNotebook.ViewModel"
    xmlns:prism="http://prismlibrary.com"
    x:Name="this"
    Title="{Binding Title}">

    <Grid RowDefinitions="0.1*, *">

        <SearchBar Grid.Row="0" />

        <StackLayout Grid.Row="1">

            <ListView
                x:Name="ListPinLocations"
                HasUnevenRows="True"
                ItemsSource="{Binding Pins}"
                SelectedItem="{Binding SelectedItem}">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.ContextActions>
                                <MenuItem
                                    Command="{Binding Source={x:Reference this}, Path=BindingContext.EditPinLocation}"
                                    CommandParameter="{Binding .}"
                                    Text="Edit" />
                                <MenuItem
                                    Command="{Binding Source={x:Reference this}, Path=BindingContext.DeletePinLocation}"
                                    CommandParameter="{Binding .}"
                                    Text="Delete" />
                            </ViewCell.ContextActions>

                            <StackLayout>

                                <Label Text="{Binding PinName}" />
                                <Label Text="{Binding Latitude}" />
                                <Label Text="{Binding Longitude}" />

                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>

        </StackLayout>

        <Frame
            Grid.Row="1"
            Margin="15"
            BackgroundColor="DodgerBlue"
            CornerRadius="45"
            HeightRequest="30"
            HorizontalOptions="End"
            VerticalOptions="End"
            WidthRequest="30">

            <Label
                FontAttributes="Bold"
                FontSize="Title"
                HorizontalOptions="Center"
                Text="+"
                VerticalOptions="Center" />

            <Frame.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding NavigateToAddPin}" />
            </Frame.GestureRecognizers>

        </Frame>

    </Grid>
</ContentPage>