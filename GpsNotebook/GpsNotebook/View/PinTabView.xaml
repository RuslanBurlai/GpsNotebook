<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GpsNotebook.View.PinTabView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:c="clr-namespace:GpsNotebook.ViewModel"
    xmlns:customSearch="clr-namespace:GpsNotebook.Behavior"
    xmlns:prism="http://prismlibrary.com"
    x:Name="this"
    Title="{Binding Title}">

    <Grid RowDefinitions="0.07*, *" ColumnDefinitions="0.3*, 0.7*">

        <Grid Grid.Row="0" 
              Grid.Column="0"
              Grid.ColumnSpan="2"
              ColumnDefinitions="0.9*, 0.1*">

            <customSearch:CustomSearchBar
                
                SearchRequest="{Binding SearchPinsCommand}"
                Grid.Column="0">
                
            </customSearch:CustomSearchBar>

            <Image 
                Grid.Column="1"
                Source = "list.png" >
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding SelectCategoryCommand}"/>
                </Image.GestureRecognizers>
            </Image>

        </Grid>

        <!--<SearchBar>
            <SearchBar.Behaviors>
                <prism:EventToCommandBehavior
                    EventName="SearchPinsCommand"
                    Command="{Binding OnSearchPinsCommand}" />

            </SearchBar.Behaviors>
        </SearchBar>-->

        <StackLayout Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">

            <ListView
                x:Name="ListPinLocations"
                HasUnevenRows="True"
                ItemsSource="{Binding Pins}"
                SelectedItem="{Binding SelectedItemInListView}">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.ContextActions>
                                <MenuItem
                                    Command="{Binding Source={x:Reference this}, Path=BindingContext.EditPinLocation}"
                                    CommandParameter="{Binding .}"
                                    Text="Edit" />
                                <MenuItem
                                    Command="{Binding Source={x:Reference this}, Path=BindingContext.DeletePinLocation}"
                                    CommandParameter="{Binding .}"
                                    Text="Delete" />
                            </ViewCell.ContextActions>

                            <StackLayout>

                                <Label Text="{Binding PinName}" />
                                <Label Text="{Binding Latitude}" />
                                <Label Text="{Binding Longitude}" />


                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>

        </StackLayout>

        <Frame
            Grid.Row="1"
            Grid.Column="1"
            Margin="15"
            BackgroundColor="DodgerBlue"
            CornerRadius="45"
            HeightRequest="30"
            HorizontalOptions="End"
            VerticalOptions="End"
            WidthRequest="30">

            <Label
                FontAttributes="Bold"
                FontSize="Title"
                HorizontalOptions="Center"
                Text="+"
                VerticalOptions="Center" />

            <Frame.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding NavigateToAddPin}" />
            </Frame.GestureRecognizers>

        </Frame>

        <Frame
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            CornerRadius="20"
            HeightRequest="120"
            IsVisible="{Binding VisibleDropDown}"
            VerticalOptions="Start" >
            <StackLayout>
                <ListView
                    ItemsSource="{Binding Pins}"
                    SelectedItem="{Binding SelectedItemInListView}"
                    SeparatorVisibility="None"
                    RowHeight="25">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout>
                                    <Label Text="{Binding PinName}" />
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </Frame>

        <Frame 
            Grid.Row="1" 
            Grid.Column="1"
            IsVisible="{Binding IsVisibleCategorySelector}"
            HeightRequest="300">
            <StackLayout 
                RadioButtonGroup.GroupName="Categories" 
                RadioButtonGroup.SelectedValue="{Binding SotrValue}">
                <RadioButton Value="Gyms" Content="Gyms"/>
                <RadioButton Value="Restaurants" Content="Restaurants"/>
                <RadioButton Value="Hotels" Content="Hotels"/>
                <RadioButton Value="Supermarkets" Content="Supermarkets"/>
                <RadioButton Value="Schools" Content="Schools"/>
                <RadioButton Value="Place to rest" Content="Place to rest"/>
                <RadioButton Value="Work" Content="Work"/>
                <RadioButton Value="Home" Content="Home" />
            </StackLayout>
        </Frame>
    </Grid>
</ContentPage>