<?xml version="1.0" encoding="utf-8" ?>
<basePage:BaseContentPage x:Class="GpsNotebook.View.ScanningQrCodeView"
                          xmlns="http://xamarin.com/schemas/2014/forms"
                          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          xmlns:basePage="clr-namespace:GpsNotebook.View"
                          xmlns:control="clr-namespace:GpsNotebook.Control"
                          xmlns:zxing="clr-namespace:ZXing.Net.Mobile.Forms;assembly=ZXing.Net.Mobile.Forms"
                          xmlns:prism="http://prismlibrary.com">

    <Grid RowDefinitions="0.02*, 0.06*, 0.98*">
        <control:CustomNavigationBar
            Grid.Row="1"
            GoBackCommand="{Binding MapTabbedCommand}"
            ImagePath="ic_left_blue"
            NavBarTitle="{Binding Title}" />

        <zxing:ZXingScannerView
            x:Name="_scanner"
            Grid.Row="2"
            Result="{Binding QrResult, Mode=TwoWay}"
            IsScanning="True"
            ScanResultCommand="{Binding QrScanResultCommand}"/>


        <BoxView BackgroundColor="red" 
                 HeightRequest="1" 
                 VerticalOptions="Center" 
                 Grid.Row="2"/>
    </Grid>
</basePage:BaseContentPage>