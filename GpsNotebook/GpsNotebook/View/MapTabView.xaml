<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GpsNotebook.View.MapTabView"
             xmlns:prism="http://prismlibrary.com" 
             xmlns:c="clr-namespace:GpsNotebook.ViewModel"
             xmlns:googleMap="clr-namespace:GpsNotebook.Control"
             Title="{Binding Title}">
    
    <Grid RowDefinitions="0.1*, *, 0.1*">

        <SearchBar Grid.Row="0"/>

        <Button Text="My Location" 
                Grid.Row="2" 
                Margin="20, 0, 20, 0" 
                Command="{Binding MyLocation}"/>



        <googleMap:CustomMap 
            Grid.Row="1"
            ListOfPins = "{Binding AllPins}">
        </googleMap:CustomMap>

        <!--My location enabled = false-->

    </Grid>
</ContentPage>