<?xml version="1.0" encoding="utf-8" ?>
<baseContentPage:BaseContentPage x:Class="GpsNotebook.View.MapTabView"
                                 xmlns="http://xamarin.com/schemas/2014/forms"
                                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                                 xmlns:c="clr-namespace:GpsNotebook.ViewModel"
                                 xmlns:googleMap="clr-namespace:GpsNotebook.Control"
                                 xmlns:baseContentPage="clr-namespace:GpsNotebook.View"
                                 xmlns:prism="http://prismlibrary.com"
                                 xmlns:searchText="clr-namespace:GpsNotebook.Behavior"
                                 Title="{Binding Title}">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding LogOut}" IconImageSource="logoutbuttonsketch.png"/>
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="0.07*, 0.73*, 0.2*">

        <searchText:CustomSearchBar Grid.Row="0" SearchRequest="{Binding SearchPins}" />

        <googleMap:CustomMapForMapTabViewModel
            Grid.Row="1"
            Grid.RowSpan="2"
            CameraOnSelectedPin="{Binding MoveCameraToPin}"
            ListOfPins="{Binding AllPins}"
            MyLocationEnabled="True"
            SelectedPin="{Binding TapOnPin}" />

        <Frame
            Grid.Row="2"
            HorizontalOptions="Start"
            VerticalOptions="Center"
            Margin="10, 0, 0, 0">

            <Frame.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding NavigateToScanQrCode}"/>
            </Frame.GestureRecognizers>
        </Frame>

    </Grid>
</baseContentPage:BaseContentPage>