<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GpsNotebook.View.SignIn">
        <Grid RowDefinitions="*, 0.3*">
        <StackLayout Grid.Row="0" VerticalOptions="Center" Padding="25">
            <Entry Placeholder="User name"/>
            <Entry Placeholder="Email"/>
            <Entry Placeholder="Password" IsPassword="True"/>
        </StackLayout>
        <Button Text="Sign In" Command="{Binding NavigateToMainListCommand}" Grid.Row="1" VerticalOptions="Center" Margin="25"/>
    </Grid>
</ContentPage>